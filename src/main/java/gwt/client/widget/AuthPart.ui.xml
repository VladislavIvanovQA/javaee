<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:elem='urn:import:com.google.gwt.dom.client'>
    <ui:with field='res' type='gwt.client.text.ApplicationConstants'/>
    <ui:style>
        .redButton {
            font-size: 10px;
        }
        .marginTop5px {
            margin-top: 5px;
        }
    </ui:style>
    <g:VerticalPanel>
        <g:HorizontalPanel ui:field="loginP" addStyleNames="{style.marginTop5px}">
            <g:Label text="Login" addStyleNames="firstColumnWidth"/>
            <g:TextBox ui:field="loginText" addStyleNames="inputWidth"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel ui:field="passwordP" addStyleNames="{style.marginTop5px}">
            <g:Label text="Password" addStyleNames="firstColumnWidth"/>
            <g:PasswordTextBox ui:field="passwordText" addStyleNames="inputWidth"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel addStyleNames="{style.marginTop5px}" horizontalAlignment="ALIGN_CENTER" width="100%">
            <g:Button text="Login" ui:field="submit" addStyleNames="{style.redButton} submitArea"/>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>