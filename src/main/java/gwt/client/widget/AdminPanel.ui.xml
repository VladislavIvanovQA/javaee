<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:FlowPanel>
        <g:VerticalPanel>
            <g:TextArea ui:field="text" name="text"/>
            <g:HorizontalPanel>
                <g:Button ui:field="submit" text="Отправить"/>
                <g:Button ui:field="clear" text="Очистить"/>
            </g:HorizontalPanel>
            <g:Label ui:field="result"/>
        </g:VerticalPanel>
    </g:FlowPanel>
</ui:UiBinder>